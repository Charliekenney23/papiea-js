{
  "name": "papiea-core",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "ts-node src/main.ts",
    "test": "jest --coverage",
    "test-ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "test-watch": "jest --watchAll",
    "build-clj": "cd papiea-lib-clj && lein cljsbuild once",
    "build-clj-auto": "cd papiea-lib-clj && lein cljsbuild auto"
  },
  "author": "Shlomi Vaknin",
  "license": "ISC",
  "dependencies": {
    "@types/js-yaml": "^3.11.4",
    "@types/mongodb": "^3.1.17",
    "@types/node": "^10.12.9",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "js-yaml": "^3.12.0",
    "mongodb": "^3.1.10",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "jest": "^23.6.0",
    "nodemon": "^1.18.8",
    "nyc": "^13.1.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "jest-junit": "^5.2.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "nyc": {
    "check_coverage": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "papiea-lib-clj"
    ]
  }
}
